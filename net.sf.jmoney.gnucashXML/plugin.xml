<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sf.jmoney.gnucashXML"
   name="GnucashXML Plug-in for jmoney"
   version="1.0.0"
   provider-name="jmoney.net"
   class="net.sf.jmoney.gnucashXML.GnucashXMLPlugin">

   <runtime>
      <library name="gnucashXML.jar">
         <export name="*"/>
      </library>
      <library name="xmlparserv2.jar" />
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="net.sf.jmoney"/>
      <import plugin="net.sf.jmoney.qif"/>
   </requires>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="net.sf.jmoney.gnucashXML"
            visible="true"
            id="net.sf.jmoney.gnucashXML">
         <menu
               label="%MainFrame.import"
               id="importMenu">
            <separator name="importExportGroup"/>
         </menu>
         <action
               label="%MainFrame.import"
               class="net.sf.jmoney.gnucashXML.actions.GnucashXMLImportAction"
               tooltip="Import Data from a GnuCash XML file"
               icon="icons/Import16.gif"
               menubarPath="file/importExportGroup"
               id="net.sf.jmoney.gnucashXML.actions.gnucashXMLImport"/>
      </actionSet>
   </extension>

</plugin>
