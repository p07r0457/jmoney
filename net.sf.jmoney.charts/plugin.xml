<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sf.jmoney.charts"
   name="Jfreechart Plug-in"
   version="1.0.0"
   provider-name=""
   class="net.sf.jmoney.charts.ChartsPlugin">

   <runtime>
      <library name="charts.jar">
         <export name="*"/>
      </library>
      <library name="jcommon-0.6.4.jar">
         <export name="*"/>
      </library>
      <library name="jfreechart-0.9.2.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="net.sf.jmoney"/>
   </requires>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="net.sf.jmoney.charts"
            visible="true"
            id="net.sf.jmoney.charts">
         <menu
               label="%MainFrame.charts"
               id="chartsMenu"/>
         <action
               label="%MainFrame.charts"
               class="net.sf.jmoney.charts.actions.Action"
               tooltip="Draw charts"
               menubarPath="file/chartsGroup"
               id="net.sf.jmoney.charts.actions.Action"/>
      </actionSet>
   </extension>

</plugin>
