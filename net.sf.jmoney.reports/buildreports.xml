<project name="JMoney reports" default="reports" basedir=".">

	<description>
Compiles the Jasper report designs (XML) into .jasper files

NOTE: "eclipse.home" must be set prior to calling this build script.
If this build script is run as an Eclipse build task then this will
be set by Eclipse.
	</description>

	<path id="classpath">
		<pathelement location="bin" />
		<pathelement location="../net.sf.jmoney/bin" />
		<fileset dir="./lib">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${eclipse.home}/plugins">
			<include name="org.eclipse.core.runtime_3.1.0.jar"/>
			<include name="org.eclipse.ui.workbench_3.1.0.jar"/>
		</fileset>
	</path>

	<target name="init">
		<tstamp />
		<mkdir dir="bin/net/sf/jmoney/reports/jasper" />
		<mkdir dir="bin/net/sf/jmoney/reports/resources" />
	</target>

	<taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask">
		<classpath refid="classpath" />
	</taskdef>

	<target name="reports" depends="init" description="compile the jasper reports">
		<jrc srcdir="src/net/sf/jmoney/reports/jasper" destdir="bin/net/sf/jmoney/reports/resources">
			<classpath refid="classpath" />
		</jrc>
	</target>

</project>
