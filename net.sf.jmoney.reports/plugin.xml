<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sf.jmoney.reports"
   name="Reports Plug-in"
   version="1.0.0"
   provider-name="JMoney"
   class="net.sf.jmoney.reports.ReportsPlugin">

   <runtime>
      <library name="reports.jar">
         <export name="*"/>
      </library>
      <library name="lib/jasperreports-0.6.1.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-logging.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-beanutils.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-collections-3.0.jar">
         <export name="*"/>
      </library>
      <library name="lib/swtjasperviewer-1.0.0.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="net.sf.jmoney"/>
      <import plugin="org.eclipse.ui.forms"/>
   </requires>


   <extension
         point="net.sf.jmoney.pages">
      <node
            id="reportsNode"
            label="%NavigationTreeModel.Reports"
            icon="icons/report.gif"
            position="500">
      </node>
      <node
            id="accountBalances"
            label="%Report.AccountBalances.Title"
            icon="icons/report.gif"
            parent="net.sf.jmoney.reports.reportsNode"
            position="100">
      </node>
      <pages
            class="net.sf.jmoney.reports.AccountBalancesPage"
            node="net.sf.jmoney.reports.accountBalances"
            id="accountBalances">
      </pages>
      <node
            id="incomeExpense"
            label="%Report.IncomeExpense.Title"
            icon="icons/report.gif"
            parent="net.sf.jmoney.reports.reportsNode"
            position="200">
      </node>
      <pages
            class="net.sf.jmoney.reports.IncomeExpensePage"
            node="net.sf.jmoney.reports.incomeExpense"
            id="incomeAndExpense">
      </pages>
      <pages
            class="net.sf.jmoney.reports.IncomeExpenseDetailPage"
            extendable-property-set="net.sf.jmoney.categoryAccount"
            id="incomeAndExpenseDetail">
      </pages>
   </extension>

</plugin>
