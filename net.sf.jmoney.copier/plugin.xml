<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sf.jmoney.copier"
   name="Datastore Copier Plug-in"
   version="1.0.0"
   provider-name=""
   class="net.sf.jmoney.copier.CopierPlugin">

   <runtime>
      <library name="copier.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="net.sf.jmoney"/>
   </requires>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="net.sf.jmoney.copier.actionSet">

         <menu
               label="&amp;Edit"
               id="edit">
            <separator
                  name="clipboardGroup">
            </separator>
         </menu>
         <action
               label="%cutSession"
               icon="icons/Open16.gif"
               tooltip="Cut session"
               class="net.sf.jmoney.copier.actions.CutSessionAction"
               menubarPath="edit/clipboardGroup"
               toolbarPath="clipboardGroup"
               id="net.sf.jmoney.copier.actions.CutSession">
         </action>
         <action
               label="%pasteContents"
               icon="icons/Open16.gif"
               tooltip="Paste session contents"
               class="net.sf.jmoney.copier.actions.PasteContentsAction"
               menubarPath="edit/clipboardGroup"
               toolbarPath="clipboardGroup"
               id="net.sf.jmoney.copier.actions.PasteContents">
         </action>
      </actionSet>
   </extension>

</plugin>
